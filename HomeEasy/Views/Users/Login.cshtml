@model HomeEasy.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center" style="height: 81vh;">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Entrar" class="btn btn-primary btn-lg" />
            </div>
        </form>
        <div class="text-center mt-3">
            <p class="mb-2">Não possui uma conta?</p>
            <a asp-action="Create" class="btn btn-secondary">Registre-se</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}