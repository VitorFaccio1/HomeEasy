@using HomeEasy.Enums
@using System.Security.Claims
@using HomeEasy.Extensions
@model IEnumerable<HomeEasy.Models.Ad>

@{
    ViewData["Title"] = "Trabalhadores";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
}

<div class="container mt-5">
    <h1 class="text-center mb-5">@ViewData["Title"]</h1>

    @if (User.IsInRole(UserType.Worker.GetDescription()))
    {
        <div class="text-center mb-4">
            <a asp-controller="Ads" asp-action="Create" class="btn btn-primary">Fazer anúncio</a>
        </div>
    }

    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm" style="width: 100%; display: flex; flex-direction: column; justify-content: space-between;">
                    <div class="d-flex justify-content-center align-items-center" style="height: 180px; overflow: hidden;">
                        <img src="@($"data:image/jpeg;base64,{ad.User.Photo}")" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" alt="Photo" />
                    </div>
                    <div class="card-body text-center d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@ad.User.Name</h5>
                            <p class="card-text"><strong>Trabalho:</strong> @ad.Job</p>
                            <hr />
                            <h6 class="card-subtitle mb-2 text-primary">@ad.Title</h6>
                            <p class="card-text">@ad.Description</p>
                        </div>
                        <div>
                            <br />
                            @{
                                var message = $"Olá, me chamo {User.Identity.Name}! Vi seu anúncio de {ad.Job} no HomeEasy. Poderia me ajudar?";
                                var whatsappUrl = $"https://wa.me/{ad.User.Phone}?text={Uri.EscapeDataString(message)}";

                                if (User.IsInRole(UserType.Client.GetDescription()))
                                {
                                    <a href="@whatsappUrl" target="_blank" class="btn btn-sm btn-success">WhatsApp</a>
                                }
                            }
                            <a asp-action="Details" asp-controller="Ads"
                               asp-route-id="@ad.Id"
                               asp-route-viewType="@UserType.Worker"
                               asp-route-page="@currentPage"
                               class="btn btn-sm btn-outline-secondary">Detalhes</a>

                            @if (User.IsInRole(UserType.Admin.GetDescription()))
                            {
                                <a asp-action="Delete" asp-controller="Ads" asp-route-id="@ad.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Workers"
                       asp-route-page="@(currentPage - 1)">Anterior</a>
                </li>
            }
            @for (var i = 1; i <= totalPages; i++)
            {

                if (i == currentPage)
                {
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Workers" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Workers"
                       asp-route-page="@(currentPage + 1)">Próximo</a>
                </li>
            }
        </ul>
    </nav>
</div>
