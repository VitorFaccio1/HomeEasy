@model HomeEasy.Models.Ad

@{
    ViewData["Title"] = "Editar Anúncio";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Editar Anúncio</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-page="@ViewBag.Page">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group text-center mb-3">
                            <label asp-for="Title" class="form-label fs-5"></label>
                            <input asp-for="Title" class="form-control" placeholder="Título do anúncio" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mb-3">
                            <label asp-for="Description" class="form-label fs-5"></label>
                            <textarea asp-for="Description" rows="6" class="form-control" rows="4" placeholder="Descrição do anúncio"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mb-3">
                            <label asp-for="Job" class="form-label fs-5"></label>
                            <select asp-for="Job" class="form-control" asp-items="@(new SelectList(ViewBag.Jobs, "Name", "Name"))">
                                <option value="">Selecione um trabalho</option>
                            </select>
                            <span asp-validation-for="Job" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mb-3">
                            <input type="submit" value="Salvar Alterações" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Users" asp-route-page="@ViewBag.Page" asp-action="MyAds" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Voltar para meus anúncios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}