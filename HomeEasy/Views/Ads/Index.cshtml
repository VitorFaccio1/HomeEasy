@using System.Security.Claims
@model IEnumerable<HomeEasy.Models.Ad>

@{
    ViewData["Title"] = "Trabalhadores";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
}

<div class="container mt-5">
    <h1 class="text-center mb-5">@ViewData["Title"]</h1>

    @if (!User.IsInRole(UserType.Client.ToString()))
    {
        <div class="text-center mb-4">
            <a asp-controller="Ads" asp-action="Create" class="btn btn-primary">Fazer anúncio</a>
        </div>
    }

    <div class="row">
        @foreach (var ad in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 100%; height: auto;">
                    <div class="d-flex justify-content-center align-items-center" style="width: 130px; height: 130px; border-radius: 50%; overflow: hidden; margin: 0 auto;">
                        <img src="@($"data:image/jpeg;base64,{ad.User.Photo}")" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;" alt="Photo" />
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@ad.User.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@ad.User.Email</h6>
                        <hr />
                        <h6 class="card-subtitle mb-2 text-primary">@ad.Title</h6>
                        <p class="card-text">@ad.Description</p>
                        <p class="card-text"><strong>Trabalho:</strong> @ad.Job</p>

                        <a asp-action="Details" asp-controller="Ads" asp-route-id="@ad.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>

                        @if (User.IsInRole(UserType.Admin.ToString()))
                        {
                            <a asp-action="Delete" asp-controller="Ads" asp-route-id="@ad.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Anterior</a>
                </li>
            }
            @for (var i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Próximo</a>
                </li>
            }
        </ul>
    </nav>
</div>